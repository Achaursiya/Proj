pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
     stage ('Build') {
      steps {
      sh 'mvn clean package'
       }
    }
    stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['52.87.224.51']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@52.87.224.51:/home/ubuntu/prod/apache-tomcat-9.0.60/webapps/webapp.war'
              }      
           }       
    }
    stage ('DAST') {
      steps {
        sshagent(['52.87.224.51']) {
         sh 'ssh -o  StrictHostKeyChecking=no ubuntu@52.87.224.51 "docker run -t owasp/zap2docker-stable zap-baseline.py -t http://52.87.224.51:8080/webapp/" || true'
        }
      }
    }
}
}
